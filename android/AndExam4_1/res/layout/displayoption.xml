	android:layout_height="wrap_content" 
	android:text="USE LOGO" />
<CheckBox
	android:id="@+id/chkshowhome"  
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:text="SHOW HOME" />
<CheckBox
	android:id="@+id/chkhomeasup"  
	android:layout_width="wrap_content" 
