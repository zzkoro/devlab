<CheckBox
	android:id="@+id/chkshowtitle"  
	android:layout_width="wrap_content" 
	android:layout_height="wrap_content" 
	android:text="SHOW TITLE" />
<CheckBox
	android:id="@+id/chkshowcustom"  
	android:layout_width="wrap_content" 
