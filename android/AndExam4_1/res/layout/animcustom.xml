	>
<Button
	android:id="@+id/btnskew"  
	android:layout_width="match_parent" 
	android:layout_height="wrap_content" 
	android:onClick="mOnClick"
	android:text="기울이기 애니메이션"
	/>
<Button
	android:id="@+id/btncamera"  
	android:layout_width="match_parent" 
	android:layout_height="wrap_content" 
